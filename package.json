{
  "name": "conceal-browser-extension",
  "version": "0.1.3",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "jwt-decode": "^3.1.2",
    "multicoin-address-validator": "https://github.com/bomb-on/multicoin-address-validator.git",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-bootstrap-typeahead": "^5.2.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-moment": "^1.1.1",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:local": "INLINE_RUNTIME_CHUNK=false react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack:build": "cd build && zip -r ../ccx-browser-extension.zip . -x '*.DS_Store*'",
    "pack:source": "zip -r ccx-browser-extension-source.zip . -x '*.DS_Store*' '.git/*' '.idea*' '*.zip' 'build/*' 'node_modules/*' 'package-lock.json'",
    "pack:all": "rm -rf build/ ccx-browser-extension*.zip; npm run build && npm run pack:build && npm run pack:source"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "fs-extra": "^10.0.0",
    "react-app-rewired": "^2.1.8",
    "webpack-cli": "^4.8.0",
    "write-file-webpack-plugin": "^4.5.1"
  }
}
