{
  "manifest_version": 2,

  "name": "Conceal Browser Extension",
  "short_name": "Conceal",
  "description": "Conceal Cloud Browser Extension",
  "version": "0.1.3",

  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },

  "browser_action": {
    "default_icon": "icons/ccx.png",
    "default_popup": "index.html",
    "default_title": "Conceal"
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
